<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dedalos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@android:color/black</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputLayoutDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="errorEnabled">true</item>
        <item name="android:textSize">27sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... outros estilos ... -->
        <item name="android:textAppearancePopupMenuHeader">@style/PopupMenuHeaderStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="PopupMenuHeaderStyle" parent="TextAppearance.AppCompat.Widget.PopupMenu.Header">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">30%</item>
    </style>
</resources>
